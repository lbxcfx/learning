.container {
  padding: 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stat-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: var(--bg-light);
}

.card-info {
  display: flex;
  flex-direction: column;
}

.card-value {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.card-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-card.blue .card-icon { background: #dbeafe; }
.stat-card.blue .card-value { color: #2563eb; }

.stat-card.green .card-icon { background: #dcfce7; }
.stat-card.green .card-value { color: #16a34a; }

.stat-card.purple .card-icon { background: #f3e8ff; }
.stat-card.purple .card-value { color: #9333ea; }

.stat-card.orange .card-icon { background: #ffedd5; }
.stat-card.orange .card-value { color: #ea580c; }

.chart-section {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.chart-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  padding-bottom: 10rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.bar-wrapper {
  width: 16rpx;
  height: 200rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.bar {
  width: 100%;
  border-radius: 10rpx;
  transition: height 1s ease-out;
}

.day-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.tips-section {
  padding-bottom: 40rpx;
}

.tip-card {
  background: linear-gradient(135deg, #FFFBEB 0%, #FFF1F2 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  gap: 24rpx;
  border: 2rpx solid #fecaca;
}

.tip-icon {
  font-size: 40rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #991b1b;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #7f1d1d;
  line-height: 1.4;
}
