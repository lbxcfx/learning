/* pages/profile/profile.wxss */

/* 用户卡片 */
.profile-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 30rpx;
  background: linear-gradient(135deg, var(--primary), var(--primary-light));
  color: white;
}

.profile-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.profile-stats {
  display: flex;
  align-items: center;
  gap: 30rpx;
  width: 100%;
  justify-content: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 登录卡片 */
.login-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  gap: 24rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.login-subtitle {
  font-size: 24rpx;
  color: var(--text-muted);
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  margin-bottom: 10rpx;
  background-color: transparent;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: var(--bg-light);
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder-icon {
  font-size: 64rpx;
  opacity: 0.6;
}

.avatar-tip {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-top: 12rpx;
}

.input-group {
  width: 100%;
  display: flex;
  align-items: center;
  background: var(--bg-light);
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.input-label {
  width: 80rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.nickname-input {
  flex: 1;
  height: 50rpx;
  font-size: 28rpx;
  color: var(--text-primary);
}

/* 菜单列表 */
.menu-list {
  background: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--bg-light);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary);
}

.menu-badge {
  background: var(--error);
  color: white;
  font-size: 22rpx;
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: var(--text-muted);
}

/* 退出按钮 */
.logout-btn {
  margin-top: 40rpx;
  background: transparent;
  color: var(--error);
  border: 2rpx solid var(--error);
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 30rpx;
}

.logout-btn:active {
  background: rgba(239, 68, 68, 0.1);
}
