.container {
  padding: 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.mistake-item {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.word-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.english {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.soundmark {
  font-size: 26rpx;
  color: var(--text-muted);
}

.chinese {
  font-size: 30rpx;
  color: var(--text-secondary);
}

.actions {
  display: flex;
  gap: 20rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: var(--bg-light);
  border: none;
}

.icon-btn.delete {
  background: #fef2f2;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  gap: 30rpx;
}

.empty-icon {
  font-size: 120rpx;
}

.empty-text {
  color: var(--text-secondary);
  font-size: 32rpx;
}

.btn-primary {
  background: var(--primary);
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-weight: 600;
  margin-top: 30rpx;
}
