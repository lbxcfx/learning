/* pages/rank/rank.wxss */

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* 我的排名 */
.my-rank {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: linear-gradient(135deg, var(--primary), var(--primary-light));
  color: white;
  position: relative;
}

.my-rank .rank-name,
.my-rank .rank-score {
  color: white;
}

.rank-highlight {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.25);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 排行榜列表 */
.rank-list {
  background: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.rank-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-item.top1 {
  background: linear-gradient(90deg, rgba(255, 215, 0, 0.15), transparent);
}

.rank-item.top2 {
  background: linear-gradient(90deg, rgba(192, 192, 192, 0.15), transparent);
}

.rank-item.top3 {
  background: linear-gradient(90deg, rgba(205, 127, 50, 0.15), transparent);
}

.rank-badge {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--bg-light);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-secondary);
}

.rank-badge.my {
  background: rgba(255, 255, 255, 0.3);
  color: white;
}

.rank-badge.medal {
  background: transparent;
  font-size: 40rpx;
}

.rank-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(99, 102, 241, 0.2);
}

.rank-info {
  flex: 1;
}

.rank-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.rank-stats {
  display: flex;
  gap: 20rpx;
  margin-top: 6rpx;
}

.rank-score {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 500;
}

.rank-days {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 登录提示 */
.login-prompt {
  text-align: center;
  padding: 60rpx 30rpx;
}

.prompt-text {
  color: var(--text-secondary);
  font-size: 28rpx;
  margin-bottom: 24rpx;
  display: block;
}
